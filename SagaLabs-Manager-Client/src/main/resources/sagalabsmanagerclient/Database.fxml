<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@Stylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sagalabsmanagerclient.controllers.DatabaseController">
   <center>
      <VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1448.0">
         <children>
            <Label alignment="CENTER" prefHeight="120.0" prefWidth="928.0" text="Press below to test the SQL database connection">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="sqlButtonConnect" mnemonicParsing="false" onAction="#ConnectToDatabase" prefHeight="74.0" prefWidth="353.0" styleClass="button1" stylesheets="@Stylesheet.css" text="Test Connection">
                     <font>
                        <Font size="33.0" />
                     </font>
                  </Button>
                  <Region prefHeight="100.0" prefWidth="50.0" />
               </children>
            </HBox>
            <Region prefHeight="20.0" prefWidth="1448.0" />
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Label fx:id="sqlstatus" alignment="CENTER" prefHeight="120.0" prefWidth="928.0" text="SQL connection: ">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </center>
   <left>
      <VBox alignment="TOP_RIGHT" prefHeight="1080.0" prefWidth="280.0" styleClass="root2" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="100.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#switchToHome" prefHeight="100.0" prefWidth="240.0" text="Home">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Region prefHeight="50.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#switchToMachine" prefHeight="100.0" prefWidth="240.0" text="Machines">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Region prefHeight="50.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#switchToSQL" prefHeight="100.0" prefWidth="240.0" text="SQL Connect">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
                  <String fx:value="button4" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Region layoutX="10.0" layoutY="360.0" prefHeight="50.0" prefWidth="280.0" />
            <Button layoutX="50.0" layoutY="411.0" mnemonicParsing="false" onAction="#switchToVPN" prefHeight="100.0" prefWidth="240.0" text="VPN">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="TOP_RIGHT" prefHeight="1080.0" prefWidth="192.0" BorderPane.alignment="CENTER">
         <children>
                  <Button mnemonicParsing="false" onAction="#logout" prefHeight="73.0" prefWidth="174.0" styleClass="button1" text="Logout">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
