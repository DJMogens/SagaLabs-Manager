<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="768.0" stylesheets="@Stylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sagalabsmanager.controllers.LabsController">
    <children>
        <HBox layoutX="-1.0" layoutY="-2.0" prefHeight="480.0" prefWidth="768.0">
            <children>
                <AnchorPane prefHeight="480.0" prefWidth="132.0" styleClass="root2">
                    <children>
                        <Button layoutX="22.0" layoutY="14.0" mnemonicParsing="false" onAction="#home" prefHeight="36.0" prefWidth="110.0" text="Home">
                     <styleClass>
                        <String fx:value="button1" />
                        <String fx:value="button3" />
                     </styleClass></Button>
                        <Button layoutX="22.0" layoutY="74.0" mnemonicParsing="false" onAction="#switchToMachine" prefHeight="36.0" prefWidth="110.0" text="Machines">
                     <styleClass>
                        <String fx:value="button1" />
                        <String fx:value="button3" />
                     </styleClass></Button>
                        <Button layoutX="22.0" layoutY="134.0" mnemonicParsing="false" onAction="#switchToSQL" prefHeight="36.0" prefWidth="110.0" text="SQL Connect">
                     <styleClass>
                        <String fx:value="button1" />
                        <String fx:value="button3" />
                     </styleClass></Button>
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="480.0" prefWidth="487.0" stylesheets="@Stylesheet.css">
               <children>
                  <TextField fx:id="sqlUsername" layoutX="95.0" layoutY="164.0" prefHeight="36.0" prefWidth="149.0" promptText="Username">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="sqlURL" layoutX="95.0" layoutY="216.0" prefHeight="36.0" prefWidth="309.0" promptText="URL to SQL database" styleClass="text-field">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Button fx:id="sqlButtonConnect" layoutX="209.0" layoutY="309.0" mnemonicParsing="false" onAction="#ConnectToSQL" prefHeight="36.0" prefWidth="82.0" styleClass="button1" stylesheets="@Stylesheet.css" text="Connect" />
                  <Label layoutX="84.0" layoutY="113.0" text="Login below to connect to your SQL database:">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="sqlfailed" alignment="CENTER" layoutX="139.0" layoutY="262.0" prefHeight="36.0" prefWidth="222.0" text="Connection Failed" textFill="RED" visible="false">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="sqlsuccess" alignment="CENTER" layoutX="7.0" layoutY="262.0" prefHeight="36.0" prefWidth="473.0" textAlignment="CENTER" textFill="#48d700" visible="false">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="sqlPassword" layoutX="253.0" layoutY="164.0" prefHeight="36.0" prefWidth="151.0" promptText="Password" styleClass="password-field" />
               </children>
                </AnchorPane>
                <AnchorPane prefHeight="480.0" prefWidth="100.0">
                    <children>
                        <Button layoutX="65.0" layoutY="8.0" mnemonicParsing="false" onAction="#logout" prefHeight="29.0" prefWidth="82.0" styleClass="button1" text="Logout" />
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
