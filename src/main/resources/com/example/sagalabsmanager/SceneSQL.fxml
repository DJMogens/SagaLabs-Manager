<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@Stylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sagalabsmanager.controllers.LabsController">
   <center>
      <VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1448.0">
         <children>
            <Label alignment="CENTER" prefHeight="120.0" prefWidth="928.0" text="Login below to connect to your SQL database:">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="sqlUsername" prefHeight="75.0" prefWidth="400.0" promptText="Username">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </TextField>
                  <Region prefHeight="100.0" prefWidth="50.0" />
                  <PasswordField fx:id="sqlPassword" prefHeight="75.0" prefWidth="400.0" promptText="Password" styleClass="password-field">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </PasswordField>
               </children>
            </HBox>
            <Region prefHeight="20.0" prefWidth="1448.0" />
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <TextField fx:id="sqlURL" prefHeight="75.0" prefWidth="850.0" promptText="URL to SQL database" styleClass="text-field">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <Label fx:id="sqlsuccess" alignment="CENTER" prefHeight="85.0" prefWidth="1005.0" textAlignment="CENTER" textFill="#48d700" visible="false">
               <font>
                  <Font name="System Italic" size="36.0" />
               </font>
            </Label>
            <Button fx:id="sqlButtonConnect" mnemonicParsing="false" onAction="#ConnectToSQL" prefHeight="71.0" prefWidth="200.0" styleClass="button1" stylesheets="@Stylesheet.css" text="Connect">
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <left>
      <VBox alignment="TOP_RIGHT" prefHeight="1080.0" prefWidth="280.0" styleClass="root2" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="100.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#home" prefHeight="100.0" prefWidth="240.0" text="Home">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Region prefHeight="50.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#switchToMachine" prefHeight="100.0" prefWidth="240.0" text="Machines">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
            <Region prefHeight="50.0" prefWidth="280.0" />
                  <Button mnemonicParsing="false" onAction="#switchToSQL" prefHeight="100.0" prefWidth="240.0" text="SQL Connect">
               <styleClass>
                  <String fx:value="button1" />
                  <String fx:value="button3" />
               </styleClass>
               <font>
                  <Font size="33.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
   <right>
      <VBox alignment="TOP_RIGHT" prefHeight="1080.0" prefWidth="192.0" BorderPane.alignment="CENTER">
         <children>
                  <Button mnemonicParsing="false" onAction="#logout" prefHeight="73.0" prefWidth="174.0" styleClass="button1" text="Logout">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
