<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="768.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sagalabsmanager.controllers.LabsController">
    <children>
        <HBox layoutX="-1.0" layoutY="-2.0" prefHeight="480.0" prefWidth="768.0">
            <children>
                <AnchorPane prefHeight="480.0" prefWidth="192.0">
                    <children>
                        <Button layoutX="6.0" layoutY="8.0" mnemonicParsing="false" onAction="#home" prefHeight="26.0" prefWidth="110.0" text="Home" />
                        <Button layoutX="7.0" layoutY="61.0" mnemonicParsing="false" onAction="#switchToMachine" prefHeight="26.0" prefWidth="110.0" text="Machines" />
                        <Button layoutX="5.0" layoutY="107.0" mnemonicParsing="false" onAction="#switchToSQL" prefHeight="25.0" prefWidth="110.0" text="SQL Connect" />
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="480.0" prefWidth="443.0">
               <children>
                  <TextField fx:id="sqlUsername" layoutX="33.0" layoutY="164.0" prefHeight="36.0" prefWidth="149.0" promptText="Username">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="sqlPassword" layoutX="193.0" layoutY="164.0" prefHeight="36.0" prefWidth="149.0" promptText="Password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="sqlURL" layoutX="33.0" layoutY="214.0" prefHeight="36.0" prefWidth="309.0" promptText="URL to SQL database">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Button fx:id="sqlButtonConnect" layoutX="146.0" layoutY="300.0" mnemonicParsing="false" onAction="#ConnectToSQL" prefHeight="36.0" prefWidth="82.0" text="Connect" />
                  <Label layoutX="3.0" layoutY="117.0" text="Login below to connect to your SQL database:">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="sqlfailed" alignment="CENTER" layoutX="77.0" layoutY="262.0" prefHeight="26.0" prefWidth="222.0" text="Connection Failed" textFill="RED" visible="false">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="sqlsuccess" alignment="CENTER" layoutX="1.0" layoutY="262.0" prefHeight="26.0" prefWidth="433.0" textAlignment="CENTER" textFill="#48d700" visible="false">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                  </Label>
               </children>
                </AnchorPane>
                <AnchorPane prefHeight="480.0" prefWidth="163.0">
                    <children>
                        <Button layoutX="65.0" layoutY="8.0" mnemonicParsing="false" onAction="#logout" prefHeight="29.0" prefWidth="82.0" text="Logout" />
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
